    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/AppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textSize="70sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/user_info_button"
        android:id="@+id/btnHome"
        android:layout_below="@+id/AppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/workout_button"
        android:id="@+id/btnWorkout"
        android:layout_below="@+id/btnHome"
        android:layout_alignStart="@+id/btnHome"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/subscription_button"
        android:id="@+id/btnSubscription"
        android:layout_below="@+id/btnWorkout"
        android:layout_alignStart="@+id/btnWorkout"
        android:layout_marginTop="33dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/settingsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_settings_icon"
        android:background="@color/mainOrange"/>

