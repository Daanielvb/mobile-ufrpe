        android:layout_height="70dp"
        android:backgroundTint="@color/black"
        android:id="@+id/view">

    </android.support.v7.widget.Toolbar>
    -->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/screenTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/workout_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <Spinner
                android:id="@+id/spinnerWeek"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/screenTxt"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="38dp" />

            <TextView
                android:id="@+id/currentDayTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerWeek"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:background="#FFFFFF">

                <TableRow android:background="@color/lightGray">

                    <TextView
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="@string/exercise_name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="@string/set_name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="@string/reps_name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="@string/weight_name"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="  âœ“ "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow android:id="@+id/tablerow1">

                    <TextView
                        android:id="@+id/exercise1"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="Chest"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/set1"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/reps1"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/weight1"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="20kg"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/checkbox_1"
                        android:background="@drawable/border2"
                        android:onClick="onCheckboxClicked"
                        android:padding="3dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow android:id="@+id/tablerow2">

                    <TextView
                        android:id="@+id/exercise2"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="Biceps"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/set2"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/reps2"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/weight2"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="20kg"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/checkbox_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/border2"
                        android:onClick="onCheckboxClicked"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow android:id="@+id/tablerow3">

                    <TextView
                        android:id="@+id/exercise3"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="Triceps"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/set3"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/reps3"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/weight3"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="20kg"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/checkbox_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border2"
                        android:onClick="onCheckboxClicked"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow android:id="@+id/tablerow4">

                    <TextView
                        android:id="@+id/exercise4"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="Back"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/set4"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/reps4"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="8"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/weight4"
                        android:background="@drawable/border2"
                        android:padding="3dip"
                        android:text="20kg"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <CheckBox
                        android:id="@+id/checkbox_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border2"
                        android:onClick="onCheckboxClicked"
                        android:padding="3dip"
                        android:textSize="20dp" />
                </TableRow>
            </TableLayout>

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/workout_info_message"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:src="@drawable/ic_back_button" />

            <Button
                android:id="@+id/finish_workout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_bg_rounded_corners"
                android:text="@string/workout_finish"
                android:textColor="@color/black"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/workout_info_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finish_workout_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:visibility="invisible" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

