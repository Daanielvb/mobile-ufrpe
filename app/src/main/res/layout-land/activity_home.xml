        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/workout_button"
        android:textColor="@color/black"
        android:id="@+id/btnWorkout"
        android:layout_below="@+id/btnHome"
        android:layout_alignStart="@+id/btnHome"
        android:layout_marginTop="34dp"
        android:background="@drawable/button_bg_rounded_corners"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/subscription_button"
        android:textColor="@color/black"
        android:id="@+id/btnSubscription"
        android:layout_below="@+id/btnWorkout"
        android:layout_alignStart="@+id/btnWorkout"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_bg_rounded_corners"/>

        <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/user_info_button"
        android:textColor="@color/black"
        android:id="@+id/btnHome"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/fitkeeper_logo"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/settingsButton"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_settings_icon"
            android:background="@drawable/button_bg_rounded_corners"
            android:layout_marginEnd="23dp"
            android:layout_alignTop="@+id/btnSubscription"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp" />

